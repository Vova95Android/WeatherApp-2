<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.patterntest.fragments.Fragment_Weather"
        android:label="fragment_first"
        tools:layout="@layout/fragment_weather" >
        <action
            android:id="@+id/action_Fragment_Weather_to_Fragment_City"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.patterntest.fragments.Fragment_City"
        android:label="fragment_second"
        tools:layout="@layout/fragment_city" >
        <action
            android:id="@+id/action_Fragment_City_to_Fragment_Weather"
            app:destination="@id/firstFragment" />
    </fragment>
</navigation>